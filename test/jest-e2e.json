{
  "moduleFileExtensions": ["js", "json", "ts"],
  "globalSetup": "<rootDir>/setup.ts",
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@app/(.*)": "<rootDir>/../src/$1",
    "@test/(.*)": "<rootDir>/$1"
  },
  "verbose": true
}
