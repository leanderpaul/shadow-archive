{
  "detectOpenHandles": true,
  "globalSetup": "<rootDir>/setup.ts",
  "moduleFileExtensions": ["js", "json", "ts"],
  "moduleNameMapper": {
    "@app/(.*)": "<rootDir>/../src/$1",
    "@tests/(.*)": "<rootDir>/$1"
  },
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  }
}
