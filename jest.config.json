{
  "collectCoverageFrom": ["**/*.(t|j)s"],
  "coverageDirectory": "./coverage",
  "detectOpenHandles": true,
  "displayName": "Shadow Archive Unit Test",
  "globalSetup": "../tests/setup.ts",
  "moduleFileExtensions": ["js", "json", "ts"],
  "moduleNameMapper": {
    "@app/(.*)": "<rootDir>/$1"
  },
  "rootDir": "src",
  "testEnvironment": "node",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "verbose": true
}
